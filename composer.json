{
  "name": "polyglot/template-resolver-simple",
  "type": "library",
  "description": "PHP Polyglot simple template resolver",
  "keywords": ["polyglot", "template-resolver"],
  "license": "MIT",
  "authors": [
    {
      "name": "Ivan Dudarev",
      "email": "ivan@ddrv.ru",
      "homepage": "https://ddrv.ru"
    }
  ],
  "require": {
    "php": "^7.4 || ^8.0",
    "ext-mbstring": "*",
    "polyglot/contract-plural-detector-registry": "^1.0",
    "polyglot/contract-template-resolver": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.5 || ^7.5 || 8.5 || 9.5",
    "squizlabs/php_codesniffer": "^3.7",
    "polyglot/plural-detector-registry-cardinal-cldr": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "Polyglot\\SimpleTemplateResolver\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "TestUnits\\Polyglot\\SimpleTemplateResolver\\": "tests/unit/"
    }
  },
  "provide": {
    "polyglot/contract-template-resolver-implementation": "1.0"
  },
  "funding": [
    {
      "type": "other",
      "url": "https://donation.ddrv.ru"
    }
  ]
}
